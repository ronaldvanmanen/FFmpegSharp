<Application x:Class="MediaPlayer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ffewd="clr-namespace:FFmpegSharp.Extensions.Windows.Data;assembly=FFmpegSharp.Extensions.Windows">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <Style x:Key="ButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <Style x:Key="RepeatButtonStyle" TargetType="{x:Type RepeatButton}" BasedOn="{StaticResource {x:Type RepeatButton}}">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <Style x:Key="ToggleButtonStyle" TargetType="{x:Type ToggleButton}" BasedOn="{StaticResource {x:Type ToggleButton}}">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <ffewd:AVRelativeTimeToDoubleConverter x:Key="AVRelativeTimeToDoubleConverter"/>
                </ResourceDictionary>
                <ResourceDictionary Source="/FastBackwardIcon.xaml"/>
                <ResourceDictionary Source="/FastForwardIcon.xaml"/>
                <ResourceDictionary Source="/MuteVolumeIcon.xaml"/>
                <ResourceDictionary Source="/PauseIcon.xaml"/>
                <ResourceDictionary Source="/PlayIcon.xaml"/>
                <ResourceDictionary Source="/StepForwardIcon.xaml"/>
                <ResourceDictionary Source="/StepBackwardIcon.xaml"/>
                <ResourceDictionary Source="/StopIcon.xaml"/>
                <ResourceDictionary Source="/UnmuteVolumeIcon.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>