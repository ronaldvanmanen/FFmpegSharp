{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Nuke Build",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/build/Build/bin/Debug/Build.exe",
            "args": [
                "--target", "${input:NukeBuildTargets}",
                "--architecture", "${input:Architecture}",
                "--configuration", "${input:Configuration}"
            ],
            "cwd": "${workspaceFolder}/build/Build/bin/Debug",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Launch Console Sample (.NET 6+)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder:FFmpegSharp}/artifacts/bin/samples/${input:ConsoleSample}/${input:Configuration}/${input:CoreClrFramework}/${input:ConsoleSample}",
            "args": [],
            "cwd": "${workspaceFolder:FFmpegSharp}/artifacts/bin/samples/${input:ConsoleSample}/${input:Configuration}/${input:CoreClrFramework}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Launch Console Sample (.NET Framework 4.x)",
            "type": "clr",
            "request": "launch",
            "program": "${workspaceFolder:FFmpegSharp}/artifacts/bin/samples/${input:ConsoleSample}/${input:Configuration}/${input:ClrFramework}/${input:ConsoleSample}",
            "args": [],
            "cwd": "${workspaceFolder:FFmpegSharp}/artifacts/bin/samples/${input:ConsoleSample}/${input:Configuration}/${input:ClrFramework}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Launch WPF Sample (.NET 6+)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder:FFmpegSharp}/artifacts/bin/samples/${input:WindowsSample}/${input:Configuration}/${input:WindowsCoreClrFramework}/${input:WindowsSample}",
            "args": [],
            "cwd": "${workspaceFolder:FFmpegSharp}/artifacts/bin/samples/${input:WindowsSample}/${input:Configuration}/${input:WindowsCoreClrFramework}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Launch WPF Sample (.NET Framework 4.x)",
            "type": "clr",
            "request": "launch",
            "program": "${workspaceFolder:FFmpegSharp}/artifacts/bin/samples/${input:WindowsSample}/${input:Configuration}/${input:ClrFramework}/${input:WindowsSample}",
            "args": [],
            "cwd": "${workspaceFolder:FFmpegSharp}/artifacts/bin/samples/${input:WindowsSample}/${input:Configuration}/${input:ClrFramework}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
    ],
    "inputs": [
        {
            "id": "Configuration",
            "description": "Choose which configuration should be used.",
            "default": "Debug",
            "type": "pickString",
            "options": [
                "Debug",
                "Release"
            ]
        },
        {
            "id": "Architecture",
            "description": "Choose which architecture should be used.",
            "default": "x64",
            "type": "pickString",
            "options": [
                "x86",
                "x64"
            ]
        },
        {
            "id": "ClrFramework",
            "description": "Choose which .NET target framework should be used.",
            "default": "net481",
            "type": "pickString",
            "options": [
                "net481",
                "net48",
                "net472",
                "net471",
                "net47",
                "net462"
            ]
        },
        {
            "id": "CoreClrFramework",
            "description": "Choose which .NET target framework should be used.",
            "default": "net8.0",
            "type": "pickString",
            "options": [
                "net8.0",
                "net7.0",
                "net6.0",
            ]
        },
        {
            "id": "WindowsCoreClrFramework",
            "description": "Choose which .NET target framework should be used to run a sample",
            "default": "net8.0-windows",
            "type": "pickString",
            "options": [
                "net8.0-windows",
                "net7.0-windows",
                "net6.0-windows"
            ]
        },
        {
            "id": "NukeBuildTargets",
            "description": "Choose which target to build",
            "default": "",
            "type": "pickString",
            "options": [
                "Clean",
                "Setup",
                "Restore",
                "Generate",
                "Compile",
                "Test",
                "Pack",
            ]
        },
        {
            "id": "ConsoleSample",
            "description": "Choose which sample should be run",
            "default": "Player",
            "type": "pickString",
            "options": [
                "ListBitStreamFilters",
                "ListCodecs",
                "ListColors",
                "ListDecoders",
                "ListDemuxers",
                "ListDevices",
                "ListEncoders",
                "ListFilters",
                "ListFormats",
                "ListMuxers",
                "ListPixelFormats",
                "ListProtocols",
                "ListSampleFormats",
                "ListSinks",
                "ListSources",
                "ListStandardChannelLayouts"
            ]
        },
        {
            "id": "WindowsSample",
            "description": "Choose which sample should be run",
            "default": "Player",
            "type": "pickString",
            "options": [
                "Player"
            ]
        }
    ]
}