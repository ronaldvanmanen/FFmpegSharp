  "version": "2.0.0",
  "tasks": [
    {
      "label": "nuke: clean",
      "type": "shell",
      "command": "./build.cmd",
      "args": [
        "clean"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "nuke"
      }
    },
    {
      "label": "nuke: setup",
      "type": "shell",
      "command": "./build.cmd",
      "args": [
        "setup"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "nuke"
      }
    },
    {
      "label": "nuke: restore",
      "type": "shell",
      "command": "./build.cmd",
      "args": [
        "restore"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "nuke"
      }
    },
    {
      "label": "nuke: generate",
      "type": "shell",
      "command": "./build.cmd",
      "args": [
        "generate"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "nuke"
      }
    },
    {
      "label": "nuke: compile",
      "type": "shell",
      "command": "./build.cmd",
      "args": [
        "compile"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "nuke"
      }
    },
    {
      "label": "nuke: test",
      "type": "shell",
      "command": "./build.cmd",
      "args": [
        "--configuration",
        "${input:NukeConfiguration}",
        "--architecture",
        "${input:NukeArchitecture}"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "nuke"
      }
    },
    {
      "label": "nuke: pack",
      "type": "shell",
      "command": "./build.cmd",
      "args": [
        "pack"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "nuke"
      }
    },
    {
      "label": "nuke: release",
      "type": "shell",
      "command": "./build.cmd",
      "args": [
        "release"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "nuke"
      }
    }
  ],
  "inputs": [
    {
      "id": "NukeTarget",
      "description": "Choose which target to build",
      "default": "",
      "type": "pickString",
      "options": [
        "Clean",
        "Setup",
        "Restore",
        "Generate",
        "Compile",
        "Test",
        "Pack",
      ]
    },
    {
      "id": "NukeConfiguration",
      "description": "Choose which configuration to build for",
      "default": "Debug",
      "type": "pickString",
      "options": [
        "Debug",
        "Release"
      ]
    },
    {
      "id": "NukeArchitecture",
      "description": "Choose which architecture to build for",
      "default": "x64",
      "type": "pickString",
      "options": [
        "x86",
        "x64"
      ]
    },
  ]
}